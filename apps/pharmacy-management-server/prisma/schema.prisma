datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Medicine {
  createdAt   DateTime  @default(now())
  description String?
  expiryDate  DateTime?
  id          String    @id @default(cuid())
  name        String?
  price       Float?
  stock       Int?
  updatedAt   DateTime  @updatedAt
}

model Customer {
  address   String?
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  orders    Order[]
  phone     String?
  updatedAt DateTime @updatedAt
}

model Order {
  createdAt   DateTime  @default(now())
  customer    Customer? @relation(fields: [customerId], references: [id])
  customerId  String?
  employee    Employee? @relation(fields: [employeeId], references: [id])
  employeeId  String?
  id          String    @id @default(cuid())
  orderDate   DateTime?
  totalAmount Float?
  updatedAt   DateTime  @updatedAt
}

model Supplier {
  address     String?
  companyName String?
  contactName String?
  createdAt   DateTime @default(now())
  email       String?
  id          String   @id @default(cuid())
  phone       String?
  updatedAt   DateTime @updatedAt
}

model Employee {
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  orders    Order[]
  phone     String?
  position  String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
